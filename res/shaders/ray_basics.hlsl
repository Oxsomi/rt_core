#pragma once
#include "@resources.hlsl"

RayDesc createRay(F32x3 origin, F32 minT, F32x3 direction, F32 maxT) {
	RayDesc r = { origin, minT, direction, maxT };
	return r;
}

F32x3 posOnRay(RayDesc r, F32 t) {
	return r.Origin + r.Direction * t;
}
